<section>
	{% for post in postslist | reverse %}
		<article{% if post.url == url %} data-current="current item"{% endif %} class="mb-8">
			<div>
				<a href="{{ post.url | url }}">
						{{ post.data.title }}
				</a>
			</div>
      <div class="text-sm">
        {{ post.data.excerpt }}
      </div>
			<div class="text-sm italic">
				<time datetime="{{ post.date | machineDate }}">
          {{ post.date | readableDate }} by <a href="/authors/{{ post.data.author | slug }}/">{{ post.data.author }}</a>
				</time>
      </div>
		</article>
	{% endfor %}
</section>
